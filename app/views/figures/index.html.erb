<p id="notice"><%= notice %></p>

<h1>Listing Figures</h1>

<table>
  <thead>
    <tr>
      <th>Characted</th>
      <th>Name</th>
      <th>Release date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @figures.each do |figure| %>
      <tr>
        <td><%= figure.character_id %></td>
        <td><%= figure.name %></td>
        <td><%= figure.release_date %></td>
        <td><%= link_to 'Show', figure %></td>
        <td><%= link_to 'Edit', edit_figure_path(figure) %></td>
        <td><%= link_to 'Destroy', figure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

