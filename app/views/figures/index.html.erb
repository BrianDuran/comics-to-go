<p id="notice"><%= notice %></p>

<h1>Figure in stock</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Release date</th>
      <th>Character</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @figures.each do |figure| %>
      <tr>
        <td><%= figure.name %></td>
        <td><%= figure.release_date %></td>
        <td><%= getCharacterName figure.character_id %></td>
        <td><%= link_to 'Show', figure, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_figure_path(figure), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', figure, method: :delete, data: { confirm: 'Destroy this figure?' },
                        class: 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Comic', new_figure_path, class: 'btn btn-default' %>
