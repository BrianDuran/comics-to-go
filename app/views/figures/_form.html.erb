<%= form_for(@figure) do |f| %>
  <% if @figure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@figure.errors.count, "error") %>:</h2>

      <ul>
      <% @figure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date %>
  </div>
  <div class="field">
    <% character_array = Character.all.map { |c| [c.name, c.id] } %>
    <%= f.label :character_id, 'Select character' %><br>
    <%= f.select :character_id, character_array %>
  </div>

  <div class="actions">
    <br/>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
<br/>
