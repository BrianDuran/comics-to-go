<%= form_for(@figure) do |f| %>
  <% if @figure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@figure.errors.count, "error") %> prohibited this figure from being saved:</h2>

      <ul>
      <% @figure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group character-selection">
    <%= f.collection_select :character_id, Character.all, :id, :name, {}, {class: 'form-control'}%>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:'form-control'%>
  </div>
  <div class="form-group release-date-field">
    <%= f.label :release_date %><br>
    <%= f.date_select :release_date, {}, {class: 'form-control'}%>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-success'%>
  </div>
<% end %>
