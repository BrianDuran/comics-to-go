<p id="notice"><%= notice %></p>

<h1>Comics in stock</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Release date</th>
      <th>Condition</th>
      <th>Character</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.name %></td>
        <td><%= comic.release_date %></td>
        <td><%= comic.condition %></td>
        <td><%= getCharacterName comic.character_id %></td>
        <td><%= link_to 'Show', comic, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_comic_path(comic), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Destroy this comic?' },
                        class: 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Comic', new_comic_path, class: 'btn btn-default' %>
