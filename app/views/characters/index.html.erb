<p id="notice"><%= notice %></p>

<h1>Existing Characters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.company %></td>
        <td><%= link_to 'Show', character, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_character_path(character), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Destroy this Character?' },
                        class: 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Character', new_character_path, class: 'btn btn-default' %>
